<Window x:Class="D2h_System.CustomerLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:D2h_System"
        mc:Ignorable="d"
        Background="RoyalBlue"
        Title="CustomerLogin" Height="450" Width="800" >
    <Window.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="White"></Setter>

        </Style>
    </Window.Resources>
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" FontSize="30" TextWrapping="Wrap"  Text="Customer Login" VerticalAlignment="Top"/>
        <TextBox  x:Name="txtinput1" Text="username" FontSize="30" Margin="240,90,245,283"  />
        <TextBox  x:Name="txtinput2" Text="password" FontSize="30" Margin="240,182,245,192"  />

        <Button Content="Login" Height="50"  FontSize="30" Click="CustomerDashboard" Margin="300,258,302,126" />




    </Grid>
</Window>
